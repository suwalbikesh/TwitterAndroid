<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.VerificationCodeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageButton
                android:id="@+id/btnVerifyCodeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:background="@drawable/image_background"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/twitter2" />

        </RelativeLayout>

    <TextView
        style="@style/TwitterTextStyle"
        android:text="We sent you a code" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Enter it below to verify"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Verification code"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#1DA1F2"
        android:text="Didn't receive an email?"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:foregroundGravity="bottom"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/btnVerifyCodeNext"
            style="@style/TwitterLoginButtonStyle"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif-black"
            android:layout_alignParentRight="true"
            android:text="Next"
            android:textAllCaps="false" />

    </RelativeLayout>

</LinearLayout>